{
	"manifest_version": 3,
	"name": "UnBiased.",
	"version": "1.0",
	"description": "Detects bias in certain news articles.",
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"permissions": [
		"activeTab",
		"scripting",
		"tabs"
	],
	"host_permissions": [
		"https://www.bbc.com/*",
		"https://www.bbc.co.uk/*",
		"https://www.nbcnews.com/*",
		"https://www.foxnews.com/*",
		"https://www.cbsnews.com/*",
		"https://www.cnn.com/*",
		"https://www.theguardian.com/*",
		"https://unbiased-heka.onrender.com/*"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"parsers/bbc_parser.js",
				"parsers/nbc_parser.js",
				"parsers/fox_parser.js",
				"parsers/cnn_parser.js",
				"parsers/cbs_parser.js",
				"parsers/guardian_parser.js",
				"popup.js",
				"highlighter.js",
				"styles/bias_styles.css"
			],
			"matches": ["<all_urls>"]
		}
	]
}
